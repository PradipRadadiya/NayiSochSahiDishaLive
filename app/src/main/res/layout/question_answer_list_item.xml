<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_rect_shape"
        android:orientation="vertical"
        android:padding="10dp">

        <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
            android:id="@+id/txt_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:padding="5sp"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextViewBold
                android:id="@+id/txtQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="7dp"
                android:maxLines="2"
                android:text="Question"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/img_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="TODO"
                android:src="@drawable/ic_ff_new"
                android:layout_marginTop="8sp"
                android:visibility="visible"
                />


        </RelativeLayout>


        <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
            android:id="@+id/txtAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtQuestion"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="7dp"
            android:maxLines="3"
            android:text="Answer"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10sp"
            >

            <LinearLayout
                android:id="@+id/lin_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/competiti_edittext_shape"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3sp">

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:text="Share"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/ic_share_black_24dp" />

            </LinearLayout>

            <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                android:id="@+id/txt_postby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/lin_share"
                android:gravity="right"
                android:layout_marginTop="4sp"
                android:lines="1"
                android:text="Question By: Pradip Radadiya"
                android:textColor="@color/redprogress"
                android:textSize="16sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_postby"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"

                >

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:id="@+id/txt_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/views"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:gravity="right"
                    android:text="Views"

                    android:textColor="@color/views"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>

            <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                android:id="@+id/txt_datess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAnswer"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:lines="1"
                android:text="15/10/2016"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>