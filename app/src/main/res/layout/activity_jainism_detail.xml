<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vimalsagarji.vimalsagarjiapp.activity.mainactivity.JainismDetailActivity">


    <include layout="@layout/toolbar_home" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_griditem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_weight="2"
        android:background="@drawable/round_rect_shape"
        app:cardCornerRadius="10sp"

        >
        <!-- put whatever you want -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextViewBold
                    android:id="@+id/txt_title_jainism"
                    style="@style/itemtextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="7dp"
                    android:paddingLeft="5sp"
                    android:text="Title"
                    android:textColor="@color/black" />

                <com.vimalsagarji.vimalsagarjiapp.jcplayer.JcPlayerView
                    android:id="@+id/jcplayerview_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp" />

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:id="@+id/txt_content"
                    style="@style/itemtextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="7dp"
                    android:padding="5dp"
                    android:text="No Description available."
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                        android:id="@+id/txt_views"
                        style="@style/itemtextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="4"
                        android:ellipsize="end"
                        android:lineSpacingExtra="7dp"
                        android:padding="5sp"
                        android:text="122 Views"
                        android:textColor="@color/views"
                        android:visibility="visible" />

                    <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                        android:id="@+id/txt_date"
                        style="@style/itemtextview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="8"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lineSpacingExtra="7dp"
                        android:padding="5sp"
                        android:text="Sunday, 20/11/2018"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/lin_like"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/round_rect_shape"
            android:gravity="center">

            <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                android:id="@+id/txt_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_thumb_up"
                android:drawableLeft="@drawable/ic_thumb_up"
                android:drawablePadding="5sp"
                android:gravity="center_vertical"
                android:padding="5sp"
                android:text="100"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_comment"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/round_rect_shape"
            android:gravity="center">

            <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                android:id="@+id/txt_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_comment_black"
                android:drawableLeft="@drawable/ic_comment_black"
                android:drawablePadding="5sp"
                android:gravity="center_vertical"
                android:padding="5sp"
                android:text="85"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_share"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/round_rect_shape"
            android:gravity="center">

            <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_share"
                android:drawableLeft="@drawable/ic_share"
                android:drawablePadding="5sp"
                android:gravity="center_vertical"
                android:padding="5sp"
                android:text="Share"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
